<h1 class="text-3xl font-bold mb-6">打順一覧</h1>

<div class="space-y-4">
  <% @lineups.each do |lineup| %>
    <div class="border rounded p-4">
      <h2 class="text-xl font-semibold"><%= lineup.name %></h2>
      <p class="text-gray-600"><%= lineup.description %></p>
      <p class="mt-2 text-sm text-gray-500">
        作成者: <%= lineup.user.try(:email) %> /
        作成日: <%= lineup.created_at.strftime("%Y-%m-%d") %>
      </p>
      <div class="mt-3">
        <%= link_to "詳細", lineup_path(lineup), class: "text-blue-600 hover:underline mr-2" %>
        <%= link_to "編集", edit_lineup_path(lineup), class: "text-blue-600 hover:underline mr-2" %>
        <%= link_to "削除", lineup_path(lineup), method: :delete, data: { confirm: "削除しますか？" }, class: "text-red-600 hover:underline" %>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-6">
  <%= link_to "新規作成", new_lineup_path, class: "bg-black text-white px-4 py-2 rounded hover:bg-gray-800" %>
</div>