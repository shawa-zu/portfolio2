<h1 class="text-3xl font-bold mb-6">試合一覧</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @lineups.each do |lineup| %>
    <div class="border rounded-lg shadow-sm bg-white p-4">
      <h2 class="text-lg font-semibold mb-1">
        <% if lineup.respond_to?(:game_date) && lineup.game_date.present? %>
          <%= l(lineup.game_date, format: :long) rescue lineup.game_date.to_s %>
        <% else %>
          試合日未定
        <% end %>
      </h2>
      <% if lineup.respond_to?(:opponent) %>
        <p class="text-sm">対戦相手: <%= lineup.opponent.presence || '-' %></p>
      <% end %>
      <p class="text-sm">
        結果:
        <% if lineup.respond_to?(:result) %>
          <%= lineup.result.presence || '-' %>
        <% else %>
          -
        <% end %>
        <% if lineup.respond_to?(:score) && lineup.score.present? %>
          (<%= lineup.score %>)
        <% end %>
      </p>
      <div class="flex justify-end space-x-2 mt-3">
        <%= link_to '詳細', lineup_path(lineup), class: 'px-3 py-1 text-sm border rounded hover:bg-gray-50' %>
        <%= link_to '編集', edit_lineup_path(lineup), class: 'px-3 py-1 text-sm border rounded hover:bg-gray-50' %>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-6">
  <%= link_to '新規試合登録', new_lineup_path, class: 'px-4 py-2 bg-black text-white rounded hover:bg-gray-800' %>
</div>