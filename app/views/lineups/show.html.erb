<h1 class="text-2xl font-bold mb-4">
  <%# Display game date and opponent if available %>
  <% if @lineup.respond_to?(:game_date) && @lineup.game_date.present? %>
    <%= l(@lineup.game_date, format: :long) rescue @lineup.game_date.to_s %>
  <% else %>
    試合日未定
  <% end %>
  <% if @lineup.respond_to?(:opponent) && @lineup.opponent.present? %>
    vs <%= @lineup.opponent %>
  <% end %>
</h1>

<div class="mb-4">
  <% if @lineup.respond_to?(:result) %>
    <p>結果: <%= @lineup.result.presence || '-' %></p>
  <% end %>
  <% if @lineup.respond_to?(:score) %>
    <p>スコア: <%= @lineup.score.presence || '-' %></p>
  <% end %>
</div>

<div class="overflow-x-auto">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">打順</th>
        <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">守備位置</th>
        <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">選手</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @lineup.lineup_players.sort_by(&:batting_order).each do |lp| %>
        <tr>
          <td class="px-4 py-2 whitespace-nowrap"><%= lp.batting_order %></td>
          <td class="px-4 py-2 whitespace-nowrap"><%= lp.position %></td>
          <td class="px-4 py-2 whitespace-nowrap"><%= lp.player.name if lp.player %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="mt-6 flex justify-between">
  <%= link_to '一覧へ戻る', lineups_path, class: 'px-4 py-2 border rounded hover:bg-gray-50' %>
  <div class="flex space-x-2">
    <%= link_to '編集', edit_lineup_path(@lineup), class: 'px-4 py-2 border rounded hover:bg-gray-50' %>
    <%= link_to '削除', @lineup, method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600' %>
  </div>
</div>