<h1 class="text-3xl font-bold mb-6"><%= @lineup.name %></h1>
<p class="mb-4"><%= @lineup.description %></p>

<table class="w-full border">
  <thead>
    <tr class="bg-gray-100">
      <th class="border px-2 py-1">打順</th>
      <th class="border px-2 py-1">選手名</th>
      <th class="border px-2 py-1">ポジション</th>
    </tr>
  </thead>
  <tbody>
    <% @lineup.lineup_entries.order(:batting_order).each do |entry| %>
      <tr>
        <td class="border px-2 py-1 text-center"><%= entry.batting_order %></td>
        <td class="border px-2 py-1"><%= entry.player&.name %></td>
        <td class="border px-2 py-1"><%= entry.player&.position %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-6 flex gap-4">
  <%= link_to "編集", edit_lineup_path(@lineup), class: "bg-gray-200 px-4 py-2 rounded hover:bg-gray-300" %>
  <%= link_to "一覧に戻る", lineups_path, class: "bg-gray-200 px-4 py-2 rounded hover:bg-gray-300" %>
</div>