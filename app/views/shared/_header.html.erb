<header class="bg-white shadow">
  <div class="max-w-7xl mx-auto flex items-center justify-between p-4">
    <a href="<%= root_path rescue '/' %>" class="text-xl font-bold">EXPECTED9</a>
    <nav class="flex items-center space-x-4 text-sm">
      <%# ナビゲーションリンク: ログイン済みかどうかで表示を切り替えます %>
      <% if defined?(user_signed_in?) && user_signed_in? %>
        <%# ログインユーザー向けナビ %>
        <%= link_to 'マイページ', respond_to?(:mypage_path) ? mypage_path : '#', class: 'hover:underline' %>
        <%= link_to '打線作成', respond_to?(:new_lineup_path) ? new_lineup_path : '#', class: 'hover:underline' %>
        <%= link_to '打線一覧', respond_to?(:lineups_path) ? lineups_path : '#', class: 'hover:underline' %>
        <%= link_to '選手作成', respond_to?(:new_player_path) ? new_player_path : '#', class: 'hover:underline' %>
        <%= link_to '選手一覧', respond_to?(:players_path) ? players_path : '#', class: 'hover:underline' %>
        <%= link_to 'ログアウト', respond_to?(:logout_path) ? logout_path : '#', method: :delete, class: 'ml-4 px-3 py-1 bg-black text-white rounded' %>
      <% else %>
        <%# 未ログインユーザー向けナビ: サインアップとログイン %>
        <%= link_to 'サインアップ', respond_to?(:new_user_path) ? new_user_path : '#', class: 'px-3 py-1 border rounded hover:bg-gray-50' %>
        <%= link_to 'ログイン', respond_to?(:login_path) ? login_path : '#', class: 'ml-2 px-3 py-1 bg-black text-white rounded' %>
      <% end %>
    </nav>
  </div>
</header>